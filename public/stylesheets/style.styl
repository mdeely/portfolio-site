.scrollToTop {
    text-align: center;
    margin: 0 auto;
    width: 200px;
    background-color: white;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 20px;
    box-shadow: 0 0 2px #CCC;
    text-decoration: none;
    color: $triggerColor;
    text-transform: uppercase;
    font-weight: 600;
    display: none;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
}


@media screen and (min-width: 480px) {
    .grid-sizer,
    .grid-item {
        width: 50%;
    }

    .nav-item {
        &.menu {
            top: $triggerSpacing;
            right: $triggerSpacing;
        }

        &.back {
            top: $triggerSpacing;
            left: $triggerSpacing;
        }
    }

    .project-title {
        margin-top: 8%;
        margin-bottom: 10%;
    }


}

@media screen and (min-width: 768px) {
    .grid-sizer,
    .grid-item {
        width: 33.333%;
    }

    .grid-item {
        .item-details {
            position: absolute;
            left: 0;
            right: 0;
            bottom: 25px;
            padding: 15px 15px 0 15px;
            opacity: 0;
        }
    }
    .container {
        .collection-container {
            .collection {
                p {
                    text-align: right;
                    position: absolute;
                    width: 33%;
                    margin-top: 0;
                    top: 40%;

                    span {
                        padding: 0 30px;
                    }
                }

                &:nth-child(odd) p {
                    text-align: left;
                    right: 0;
                    left: initial;
                }
            }
        }
    }
}

@media screen and (min-width: 1024px) {
    .grid-sizer,
    .grid-item {
        width: 25%;
    }
}

@media screen and (min-width: 1400px) {
    .grid-sizer,
    .grid-item {
        width: 20%;
    }
}