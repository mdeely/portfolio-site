@import 'nib';

// Nib provides a CSS reset
global-reset()

// Button Reset
button {
    cursor: pointer;
    border: none;
    margin: 0;
    padding: 0;
    outline: 0;
    background-color: transparent;
}

img {
    max-width: 100%;
}

// Mixins
aspectRatio($width, $height) {
  position: relative;
  &:before {
    display: block;
    content: "";
    width: 100%;
    padding-top: ($height / $width) * 100%;
  }

  > .item-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
}

navItemStyles() {
    background-color: white;
    box-shadow: $boxShadow;
    border-radius: 5px;
}

// Animations

@keyframes hover {
    0%   { transform: translate(0px,0px); }
    20%  { transform: translate(-3px,9px); }
    40%  { transform: translate(0px,-8px); }
    60%  { transform: translate(4px,7px); }
    80%  { transform: translate(-5px,-8px); }
    100% { transform: translate(0px,0px); }
}

// Variables

$blue   = #92C3FF;
$black  = #333;
$red = #FF6161;

$backgroundColor     = #F9F9F9;
$triggerSpacing      = 42px;
$triggerSpacingSixth = ($triggerSpacing/6)
$triggerLineHeight   = 3px;
$triggerColor        = $blue;

$menuWidth = 320px;

$boxShadow = 0 1px 2px rgba(0,0,0,.15);

html {
    font-family: 'Lato';
    background-color: $backgroundColor;

    * {
        box-sizing: border-box;
    }
}

body {
    font-family: 'Lato';
    background-color: $backgroundColor;
    color: $black;
    line-height: 1.5;

    &.no-scroll {
        overflow: hidden;
        height:100%;
    }
}

// Clearfix

.cf {
    clearfix()
}

h1 {
    font-size: 44px;
    text-transform: capitalize;
}

p  {
    font-size: 16px;
    line-height: 1.5em;
    padding: 0 20px;
}

.nav-item {
    position: fixed;
    top: 28px;
    right: 14px;
    z-index: 999;
    transition: top .5s ease-in-out, right .5s ease-in-out;
    transition-delay: .6s;
    navItemStyles();

    &.back,
    .menu-trigger {
        height: $triggerSpacing;
        width: $triggerSpacing;
        padding: 20px 10px;
    }

    &.back {
        left: 14px;
        width: $triggerSpacing;
        height: $triggerSpacing;

        span {
            background-color: transparent;
            width: 16px;

            &:before{
                left: 1px;
                top: 4px;
                transform: rotate(35deg);
            }

            &:after {
                left: 1px;
                top: -4px;
                transform: rotate(-35deg);
            }
        }
    }


    .menu-trigger {
        z-index: 1000;
        position: relative;
        transition: box-shadow .15s ease-in-out;
        navItemStyles();
        background-color: transparent;
        box-shadow: none;
    }

    span {
        background-color: $triggerColor;
        width: 100%;
        height: $triggerLineHeight;
        display: block;
        position: relative;
        border-radius: $triggerLineHeight*2;
        z-index: inherit;
        transition: all .25s ease-in-out;
        pointer-events: none;

        &:after,
        &:before {
            content: "";
            position: absolute;
            top: -10px;
            left: 0;
            width: inherit;
            height: $triggerLineHeight;
            background-color: inherit;
            border-radius: 5px;
            background-color: $triggerColor;
            transition: all .25s ease-in-out;
        }

        &:before, {
            top: 10px;
        }
    }

    &:active {
        transform: translate(0,1px);
        box-shadow: 0 0 1px rgba(0,0,0,.15);
    }
}

.fullscreen-image {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-attachment: scroll;
    background-size: cover;
    z-index: 9999;
    overflow: scroll;
    text-align: center;
    background-color: #333;
    padding: 20px;
    cursor: -webkit-zoom-out;

    img {
        box-shadow: 0 2px 4px rgba(black, .5);
        border-radius: 3px;
        background-color: $backgroundColor;
    }
}

.menu {
    .menu-trigger.triggered {
        box-shadow: none;

        span {
            background-color: transparent;

            &:before,
            &:after {
                transition: all .25s ease-in-out;
                top: 0px;
            }

            &:before {
                transform: rotate(-45deg);
            }

            &:after{
                transform: rotate(45deg);
            }
        }
    }
}

ul.menu-container {
    position: absolute;
    width: $menuWidth;
    height: auto;
    top: 0;
    right: 0;
    border-radius: 4px;
    background-color: darken($blue, 30%);
    background-color: white;
    box-shadow: inherit;
    opacity: 0;
    text-align: left;
    font-size: 16px;
    color: #333;
    overflow: hidden;
    transition: all .2s ease-in-out;
    transform-origin: 100% 0;
    transform: scale(0, 0);

    &.open {
        box-shadow: $boxShadow;
        opacity: 1;
        padding: 20px;
        transition: all .25s ease-in-out;
        transform: initial;

        li {
            opacity: 1;
            transition: all .25s ease-in-out;
            transition-delay: .15s;
            transform: initial;

            &:nth-child(2) { transition-delay: .25s; };
            &:nth-child(3) { transition-delay: .35s; };
            &:nth-child(4) { transition-delay: .45s; };
        }
    }

    li {
        opacity: 0;
        transform: translate(10px, 0);
        transition: all .25s ease-in-out;
        // transition-delay: .2s;

        a {
            color: inherit;
            text-decoration: none;
            display: block;
            padding: 20px;

            &.current {
                color: $red;

                &:hover {
                    color: $red;
                }
            }

            &:hover {
                color: $triggerColor;
            }
        }
    }
}

nav.masthead {
    padding: 24px;
    color: transparent;

    ul {
        margin: 0 auto;
        text-align: center;

        li {
            display: inline-block;
            padding: 6px;
            margin: 6px 12px;
            font-size: 1em;
            vertical-align: middle;
            background-color: white;
            box-shadow: 0 1px 2px rgba(0,0,0,.25);
            height: 65px;
            width: 65px;
            border-radius: 5em;
            -webkit-animation: hover 9s infinite;
            animation: hover 40s ease-in-out infinite;

            &:nth-child(2n) { animation: hover 30s ease-in-out infinite reverse; }
            &:nth-child(3n) { animation: hover 20s ease-in-out infinite alternate; }

            &.name {
                font-size: 2em;
                margin: 6px 7%;
                width: 100px;
                height: 100px;
            }
        }
    }
}

.container {
    padding: 14px;
    background-color: $backgroundColor;
    position: relative;

    .collection-container {

        .collection {
            text-align: center;
            margin-bottom: 12%;
            position: relative;

            &:first-child {
                img {
                    box-shadow: none;
                    max-width: 550px;
                    width: 100%;
                }

                p {
                    position: relative;
                    width: 100%;
                    margin-top: 12px;

                    span {
                        display: block;
                        max-width: 400px;
                        padding: 0 30px;
                        font-weight: 300;
                        font-style: italic;
                        margin: 0 auto;
                        text-align: center;
                    }
                }
            }

            img {
                max-width: 400px;
                width: 33%;
                min-width: 300px;
                cursor: -webkit-zoom-in;
                box-shadow: 0 1px 2px rgba(0,0,0,.4);
            }

            p {
                text-align: center;
                position: relative;
                width: 100%;
                left: 0;
                color: #777;
                margin-top: 12px;
                font-size: .875em;

                span {
                    display: inline-block;
                    max-width: 300px;
                    padding: 0 30px;
                    font-weight: 300;
                    font-style: italic;
                }
            }
        }
    }
}

.masthead {
    &.project-header {
        height: 0px;
        position: relative;
        z-index: 0;
        overflow: hidden;
        padding: 8px;

        &:before {
          content: '';
          height: 0px;
          width: 0px;
          position: absolute;
          left: 0px;
          right: 0px;
          bottom: 0px;
          border-color: rgba(255, 255, 255, 0) rgba(white .2);
          border-style: solid;
          border-width: 10px 100vw 0px 0px;
          margin-top: 0px;
          z-index: 9;
        }

        &:after {
            content: "";
            height: 0;
            width: 0;
            position: absolute;
            left: 0;
            right: 0;
            width: 0;
            height: 0;
            bottom: 0;
            border-color: rgba(255, 255, 255, 0) rgba(white .2);
            border-style: solid;
            border-width: 400px 0 0 0;
            border-left-width: 100vw;
            border-top-width: 10px;
            margin-top: 0px;
        }
    }

    .hero {
        position: fixed;
        left: 0;
        max-width: 100%;
        right: 0;
        top: 0;
        bottom: 0;
        z-index: 0;
        pointer-events: none;
        background-size: cover;
        background-position: 50% 0;
        background-repeat: no-repeat;
        background-color: $backgroundColor;
    }
}

& .project-title {
    text-align: center;
    margin-top: 16%;
    margin-bottom: 20%;

    h1 {
        font-size: 30px;
        text-transform: uppercase;
        letter-spacing: 8px;
        font-weight: bold;
    }

    p {
        color: #888;
        font-weight: 300;
        max-width: 360px;
        margin: 0 auto;
    }
}

